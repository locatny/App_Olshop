<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgsix"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-8dp"
            android:background="@drawable/border_profile"
            android:padding="8dp"
            android:text="Anonymous"
            app:layout_constraintBottom_toBottomOf="@id/ivLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivLogo"
            app:layout_constraintTop_toTopOf="@id/ivLogo" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toBottomOf="@id/ivBack" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDesign"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bgprofile"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/ivLogo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgprofile" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/llWidgets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/backg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            app:layout_constraintBottom_toBottomOf="@id/cvDesign"
            app:layout_constraintEnd_toEndOf="@id/cvDesign"
            app:layout_constraintStart_toStartOf="@id/cvDesign"
            app:layout_constraintTop_toBottomOf="@id/cvDesign">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="location" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/transfer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="transfer" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/admissionfee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="admission fee" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Settings"
            android:paddingHorizontal="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backg"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/llWidgets"
            app:layout_constraintStart_toStartOf="@id/llWidgets"
            app:layout_constraintEnd_toEndOf="@id/llWidgets"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccount"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Account"
            android:paddingHorizontal="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backg"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/btnSettings"
            app:layout_constraintStart_toStartOf="@id/llWidgets"
            app:layout_constraintEnd_toEndOf="@id/llWidgets"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Quit"
            android:paddingHorizontal="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backg"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/btnAccount"
            app:layout_constraintStart_toStartOf="@id/llWidgets"
            app:layout_constraintEnd_toEndOf="@id/llWidgets"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>